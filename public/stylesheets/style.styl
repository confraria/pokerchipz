@import 'nib'

body
  padding: 0
  margin:0
  font: 14px Oswald, "Lucida Grande", Helvetica, Arial, sans-serif
  text-align: center
a
  color: #00B7FF

.title
  text-indent: -9000px
  display:inline-block
  width: 625px
  height: 148px
  background: transparent url("../images/logo.png")

.game .title
  width: 250px
  height: 59px
  background: transparent url("../images/logos.png")


.splash
  width: 100%
  background:  linear-gradient(top, #1A6C00, #008C23)
  padding:30px 0

.qr, .tagline
  font-size: 28px
  color: #FFF
  width:650px;
  line-height:1.1em
  display:inline-block
  display:block
  margin: 0 auto 20px auto

.qr
  text-align:left
  font-size: 32px
  line-height:1.2em

.action
  font-size:45px
  text-transform:uppercase
  display:inline-block
  margin:auto
  padding: 10px;
  text-decoration: none
  color: #313140
  background linear-gradient(top, #FFFFFF, #BBBBBB)
  border-radius: 5px

.action:hover
  box-shadow: 0 0 20px rgba(0,0,0,.6)
  background:white

.qrcode 
  float:left
  margin-right:20px
  width: 200px
  height:200px
