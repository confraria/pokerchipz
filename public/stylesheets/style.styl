@import 'nib'

body
  padding: 0
  margin:0
  font: 14px Oswald, "Lucida Grande", Helvetica, Arial, sans-serif
  text-align: center
a
  color: #00B7FF

.title
  text-indent: -9000px
  display:inline-block
  width: 625px
  height: 148px
  background: transparent url("../images/logo.png")

.game .title
  width: 250px
  height: 59px
  background: transparent url("../images/logos.png")


.splash
  width: 100%
  background:  linear-gradient(top, #1A6C00, #008C23)
  padding:30px 0
  position: relative

.splash.hidden
  height: 0
  padding:0

.qr, .tagline
  font-size: 28px
  color: #FFF
  width:650px;
  line-height:1.1em
  display:inline-block
  display:block
  margin: 0 auto 20px auto

.qr
  text-align:left
  font-size: 32px
  line-height:1.2em
  margin: 0 auto

.action
  font-size:45px
  text-transform:uppercase
  display:inline-block
  margin:auto
  padding: 10px;
  text-decoration: none
  color: #313140
  background linear-gradient(top, #FFFFFF, #BBBBBB)
  border-radius: 5px

.action:hover
  box-shadow: 0 0 20px rgba(0,0,0,.6)
  background:white

.qrcode 
  float:left
  margin-right:20px
  width: 120px
  height:120px
  
  transition: all .5s

.qrcode.highlight
  box-shadow: 0 0 40px rgba(0,0,0,0.6)
  transform: scale(2.5) translateX(-35px);

.listplayers
  list-style:none

.player
  display:inline-block
  width:150px
  height:150px
  background: #999
  font-size:20px
  position: relative
  margin-right:10px
  margin-bottom:10px
  overflow:hidden
  opacity:.6
  vertical-align:top
  border-radius: 100%
  transform: all 1s

.player.betting
  opacity:1
  transform: scale(1.1)
  box-shadow: 0 0 15px rgba(0,0,0,.4)


.player span
  display: block

.player .totalbet 
  font-size:36px
  line-height: 65px
  text-align:center
  display:block;
  height:50px
.player .credits 
  font-size:18px
  color:#000

.player .info 
  position: absolute
  bottom:0
  left:0
  right:0
  padding:3px
  font-size: 12px

.player .dealer
  background-color:#1A6C00

.player .fold
  background-color:#F21137
  color: #FFF

.player.fold 
  opacity: .2

.notify
  position: fixed
  top: 0
  left:0
  right:0
  height:50px
  padding: 20px
  background-color:#333
  color:#EEE
  font-size:42px;

.icon 
  font-size: 40px;
  opacity: .6
  text-decoration:none
  color:#000

.icon:hover
  opacity: 1

.hidesplash
  position: absolute
  right: 10px
  top:-5px

.gameinfo
  list-style: none


.gameinfo li
  display: inline-block
  position: relative
  margin-right: -2px;
  background: #1A6C00
  border-radius: 50%
  color:#FFF
  height:100px;
  width:100px;

.gameinfo span
  display: inline-block
  width: 100px
  left: 0
  position: absolute

.gameinfo .descr
  top: 15px;
  text-transform: uppercase
  font-size:10px

.gameinfo .nr
  font-size:40px
  position: absolute
  bottom: 15px;



